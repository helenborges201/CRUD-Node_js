<form action="/add" method="post">
    <div class="form-container">
        <h2>Adicionar Usuário</h2>
        <div class="form-control">
            <label for="nome">Nome:</label>
            <input type="text" name="nome" placeholder="Digite o seu nome" required>
        </div>
        <div class="form-control">
            <label for="email">E-mail:</label>
            <input type="email" name="email" placeholder="Digite o seu e-mail" required>
        </div>
        <div class="form-control">
            <label for="telefone">Telofone:</label>
            <input type="text" name="telefone" placeholder="Digite o seu número de telefone" required>
        </div>
    </div>
    <input type="submit" class="btn" value="Criar">
</form>