<form action="/edit" method="post">
    <div class="form-container">
        <h2>Editar Usuário</h2>
        <input type="hidden" name="id" value="{{user.id}}">
        <div class="form-control">
            <label for="nome">Nome:</label>
            <input type="text" name="nome" placeholder="Digite o seu nome" value="{{user.nome}}" required>
        </div>
        <div class="form-control">
            <label for="email">E-mail:</label>
            <input type="email" name="email" placeholder="Digite o seu e-mail" value="{{user.email}}" required>
        </div>
        <div class="form-control">
            <label for="telefone">Telofone:</label>
            <input type="text" name="telefone" placeholder="Digite o seu número de telefone" value="{{user.telefone}}" required>
        </div>
    </div>
    <input type="submit" class="btn" value="Editar">
</form>